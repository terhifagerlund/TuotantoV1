@model IEnumerable<TuotantoV1.Models.Asiakkaanperustiedot>

@{
    ViewBag.Title = "Index";
}
    <style>
        body {
            background-color: #F8F8FF;
        }
    </style>

<h2>Etusivu</h2>
<br>
@using (Html.BeginForm())
{
<p>
    Etsi asiakasta: @Html.TextBox("SearchString")
    <input type="submit" value="Hae" />&nbsp&nbsp<button>@Html.ActionLink("Näytä kaikki asiakkaat", "Index")</button>
</p>
}
<br>
<br>
<br>
<p>
    <button>@Html.ActionLink("Lisää uusi asiakas", "Create")</button>
</p>

    <table class="table table-hover">
        <tr>
            <th>
                <span style="cursor:pointer"></span>
                @Html.ActionLink("Asiakasnumero","Index", new { sortOrder = ViewBag.AsiakasnumeroNameSortParm })
            </th>
            <th>
                <span style="cursor:pointer"></span>
                @Html.ActionLink("Sukunimi", "Index", new { sortOrder = ViewBag.SukunimiNameSortParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etunimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Osoite)
            </th>
            <th>
                <span style="cursor:pointer"></span>
                @Html.ActionLink("Postinumero", "Index", new { sortOrder = ViewBag.PostinumeroNameSortParm })
            </th>
            <th>
                <span style="cursor:pointer"></span>
                @Html.ActionLink("Postitoimipaikka", "Index", new { sortOrder = ViewBag.PostitoimipaikkaNameSortParm })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puhelin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sähköposti)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Asiakasnumero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sukunimi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Etunimi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Osoite)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postinumero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postitoimipaikka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puhelin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sähköposti)
                </td>
            <td>
                <button>@Html.ActionLink("Asiakastiedot", "Details", new { id = item.Asiakasnumero })</button>
            </td>
            </tr>
        }

    </table>

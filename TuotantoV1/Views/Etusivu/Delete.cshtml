            </dt>

            <dd>
                @Html.DisplayFor(model => model.Laskutuspostitoimipaikka)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Poista" class="btn btn-default" onclick="return confirm('Tiedot on poistettu')" />
            </div>
        }
    </div>

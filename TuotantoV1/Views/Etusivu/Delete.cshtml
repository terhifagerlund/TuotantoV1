@model TuotantoV1.Models.Asiakkaanperustiedot

@{
    ViewBag.Title = "Delete";
}

<h2>Haluatko varmasti poistaa asiakkaan tiedot?</h2>
<p>
    @Html.ActionLink("Takaisin", "Index")
</p>

<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    .alert {
        padding: 20px;
        background-color: #f44336;
        color: white;
    }

    .closebtn {
        margin-left: 15px;
        color: white;
        font-weight: bold;
        float: right;
        font-size: 22px;
        line-height: 20px;
        cursor: pointer;
        transition: 0.3s;
    }

        .closebtn:hover {
            color: black;
        }
</style>

    <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <strong>HUOMIO!</strong> Poista asiakkaan asiakasluokittelu ja asiakastapahtuma ennen poistamista.
    </div>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Etunimi)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Etunimi)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Sukunimi)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sukunimi)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Osoite)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Osoite)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Postinumero)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Postinumero)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Postitoimipaikka)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Postitoimipaikka)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Puhelin)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Puhelin)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Sähköposti)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Sähköposti)
            </dd>
        </dl>
        <h4><b>Poikkeava laskutustieto:</b></h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nimi)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Laskutusnimi)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Osoite)
            </dt>


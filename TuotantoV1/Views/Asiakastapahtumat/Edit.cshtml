@model TuotantoV1.Models.Asiakastapahtumat

@{
    ViewBag.Title = "Edit";
}
    <style>
        body {
            background-color: #F8F8FF;
        }
    </style>

<h2>Muokkaa asiakastapahtumaa</h2>

<div>
    @Html.ActionLink("Takaisin", "Index")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Tapahtumaid)

        <div class="form-group">
            @Html.LabelFor(model => model.Asiakkaanperustiedot.Asiakasnumero, "Asiakas", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Asiakasnumero", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Asiakkaanperustiedot.Asiakasnumero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Päivämäärä, "Päivämäärä *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Päivämäärä, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Päivämäärä, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Yhteydenotto, "Yhteydenotto *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("Yhteydenotto", null, "Select Gender", new { @class = "form-control" })})*@
                @Html.EditorFor(model => model.Yhteydenotto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yhteydenotto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kuvaus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Kuvaus, 10, 40, htmlAttributes: new { @Style = "height:200px; width:300px;" })
                @*@Html.TextAreaFor(model => model.Kuvaus, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Kuvaus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ratkaisu, "Ratkaisu *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Ratkaisu, 10, 40, htmlAttributes: new { @Style="height:200px; width:300px;" })
                @*@Html.TextAreaFor(model => model.Ratkaisu, new { maxlength = 2000, height = "250", width = "300"  })*@
                @Html.ValidationMessageFor(model => model.Ratkaisu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tallenna" class="btn btn-default" onclick="return confirm('Tallennus onnistui')" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
